<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scoreboard"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/activity_score_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <Button
            android:id="@+id/activity_score_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"/>


        <TextView
            android:id="@+id/activity_score_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score = 0"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/activity_score_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"/>
    </LinearLayout>
    <EditText
        android:id="@+id/activity_score_playername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Your Name Here" />
    <Button
        android:id="@+id/activity_score_saveall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVEALL"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_score_scoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScoreBoards"
            android:layout_gravity="center"
            android:textSize="35dp" />



    </LinearLayout>
</LinearLayout>